<link rel="stylesheet" href="~/Styles/cssLayout/Canasta.css" />

@model Proyecto.Models.Usuario

@{
    ViewBag.Title = "Crear Empleado";
}

<h2>Crear Empleado</h2>

@if (!string.IsNullOrEmpty(ViewBag.MensajePantalla))
{
    <div class="alert alert-warning">
        @ViewBag.MensajePantalla
    </div>
}

@using (Html.BeginForm("CrearEmpleado", "Usuario", FormMethod.Post))
{
    // @Html.HiddenFor(model => model.Id)

    <div class="form-group mb-3">
        <label for="Identificacion">Identificacion</label>
        @Html.TextBoxFor(model => model.Identificacion, new { @class = "form-control", @placeholder = "Ingrese el nombre" })
        @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        <label for="Nombre">Nombre</label>
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Ingrese el nombre" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="Apellido">Apellido</label>
        @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", @placeholder = "Ingrese el apellido" })
        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="CorreoElectronico">Correo Electrónico</label>
        @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control", @type = "email", @placeholder = "Ingrese el correo electrónico" })
        @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="Telefono">Teléfono</label>
        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", @placeholder = "Ingrese el número de teléfono" })
        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        <label for="Contrasenna">Contrasenna</label>
        @Html.TextBoxFor(model => model.Contrasenna, new { @class = "form-control", @placeholder = "Ingrese el número de teléfono", @type = "password" })
        @Html.ValidationMessageFor(model => model.Contrasenna, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a href="@Url.Action("Home", "Index")" class="btn btn-secondary">Cancelar</a>
}