@model Proyecto.Models.Producto

@{
    ViewBag.Title = "EditarProducto";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-danger text-center">
            <h5 class="mb-0 text-white">
                <span class="d-block">Editar</span>
                <span class="d-block">Producto</span>
            </h5>
        </div>
        <div class="card-body">
            @if (ViewBag.MensajePantalla != null)
            {
                <div class="alert alert-danger text-center" role="alert">
                    @ViewBag.MensajePantalla
                </div>
            }

            @using (Html.BeginForm("EditarProducto", "Productos", FormMethod.Post, new { @class = "needs-validation", @novalidate = "novalidate" }))
            {
                @Html.HiddenFor(m => m.IdProducto)

                <div class="mb-4">
                    <label class="form-label fw-semibold">Nombre del Producto</label>
                    @Html.TextBoxFor(m => m.NombreProducto, new { @class = "form-control", @placeholder = "Nombre del producto", @required = "required" })
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Descripción</label>
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", @rows = 3, @placeholder = "Descripción del producto", @required = "required" })
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Stock</label>
                    @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", @type = "number", @min = "0", @required = "required" })
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Precio</label>
                    @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", @type = "number", @step = "0.01", @required = "required" })
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-danger fw-semibold">Guardar Cambios</button>
                </div>
            }
        </div>
    </div>
</div>
