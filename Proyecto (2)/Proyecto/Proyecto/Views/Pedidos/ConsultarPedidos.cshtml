@model List<Proyecto.Models.tPedidos>

@{
    ViewBag.Title = "ConsultarPedidos";
}

<h2>Mis Pedidos</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th># Pedido</th>
            <th>Fecha</th>
            <th>Dirección</th>
            <th>Total</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.Consecutivo</td>
                <td>@pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@pedido.Direccion</td>
                <td>@pedido.Total.ToString("C")</td>
                <td>@pedido.Estado</td>
            </tr>
        }
    </tbody>
</table>

